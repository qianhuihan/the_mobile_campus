<LinearLayout    
        android:layout_width="fill_parent"   
        android:layout_height="fill_parent"  
        android:orientation="vertical" 
        android:background="#fff"
        xmlns:android="http://schemas.android.com/apk/res/android">  
        <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="10sp">
        <ImageButton 
             android:id="@+id/news_back"
             android:layout_width="30sp"
             android:layout_height="20sp"
             android:scaleType="fitCenter"
             android:layout_alignParentLeft="true"
             android:background="#fff"
             android:src="@drawable/gback"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:textColor="#000"
            android:text="新闻详情" />
        </RelativeLayout>        
        
        <ScrollView   
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:scrollbars="none">
         <LinearLayout
            android:layout_width="fill_parent"   
            android:layout_height="wrap_content"
            android:orientation="vertical" >"

         <TextView
             android:id="@+id/news_name"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingTop="8sp"
             android:paddingBottom="16sp"
             android:gravity="center"
             android:text="新闻名字"
             android:textColor="#000"
             android:textSize="18sp" />
         <LinearLayout
            android:layout_width="fill_parent"   
            android:layout_height="wrap_content"
            android:paddingLeft="2sp"
            android:paddingBottom="10sp"
            android:orientation="horizontal">
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8sp"
            android:textSize="12sp"
            android:textColor="#5e6364"
            android:text="日期:" />
          <TextView
            android:id="@+id/news_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:textSize="12sp"
            android:textColor="#5e6364"
            android:text="2017-05-12 12:22:11" />
       
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50sp"
            android:textSize="12sp"
            android:textColor="#5e6364"
            android:text="编辑:" />
          <TextView
            android:id="@+id/news_editor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:textSize="12sp"
            android:textColor="#5e6364"
            android:text="何因琳" />
         </LinearLayout>
         <View style="@style/bg_line"/>
         
         <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"  
        android:src="@drawable/news1" />
         
         <LinearLayout 
            android:layout_width="fill_parent"   
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:orientation="horizontal">
         <TextView
            android:id="@+id/news_body"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:lineSpacingExtra="2sp"
            android:lineSpacingMultiplier="1.5"
            android:textColor="#4e4949"/>
         </LinearLayout>
         
         </LinearLayout>
         
         </ScrollView>
</LinearLayout>