<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->  
     
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>   
    <style name="BottomMenu" parent="android:Theme.Holo.Light">  
    <item name="android:button">@null</item>  
    <item name="android:textColor">#a2b0c7</item>  
    <item name="android:gravity">center_horizontal</item>  
    <item name="android:layout_weight">1</item>  
    <item name="android:background">#ffffff</item>
    <item name="android:padding">5dp</item>  
    <item name="android:textSize">12sp</item>  
    </style>
    
    <style name="monday" parent="android:Theme.Holo.Light">   
    <item name="android:background">#fff</item>
    <item name="android:layout_height">35sp</item>
    <item name="android:alpha">0.5</item>
    <item name="android:textColor">#000</item>
    <item name="android:textSize" >10sp</item> 
    <item name="android:textStyle" >bold</item>
    <item name="android:height">20sp</item>
    <item name="android:gravity">center</item>  
    </style>
       
    <style name="coursenum" parent="android:Theme.Holo.Light">   
    <item name="android:background">#fff</item>
    <item name="android:alpha">0.5</item>
    <item name="android:textColor">#000</item>
    <item name="android:textSize">10sp</item>  
    <item name="android:height">50sp</item>
    <item name="android:gravity">center</item>
    </style>
    
    <!-- textview样式 -->
    <style name="usertext">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#b5becd</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    
    <!-- concretetext样式 -->
    <style name="concretetext">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <!-- 文本右边箭头样式 -->
    <style name="img_arrow">
        <item name="android:layout_width">20sp</item>
        <item name="android:layout_height">20sp</item>
        <item name="android:src">@drawable/kuo</item>        
    </style>
    <!-- view分割线样式 -->
    <style name="bg_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#b5becd</item>
    </style>
    
</resources>
